<?xml version="1.0" encoding="utf-8"?>
<!-- android:shape指定形状类型，默认为rectangle -->
<!-- 在描边里面设置了dash参数，使得图形的边变成了虚线 <stroke   android:dashGap="3dp"  android:dashWidth="5dp"  android:color="#dcdcdc" />  -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <solid android:color="#ffffff" />

    <stroke android:width="1.5dip" android:color="#27bea0" />

    <corners
        android:bottomLeftRadius="6dp"
        android:bottomRightRadius="6dp"
        android:topLeftRadius="6dp"
        android:topRightRadius="6dp" /> <!-- 设置四个角的半径 -->

    <padding
        android:bottom="6dp"
        android:left="10dp"
        android:top="6dp" />

</shape>