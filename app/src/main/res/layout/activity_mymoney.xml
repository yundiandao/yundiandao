<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#ededed"
              android:orientation="vertical"
              tools:context=".fn.MymoneyActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:orientation="vertical">
        <!--头部-->
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="6dp"
                      android:background="#d04f10">
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:background="#fc6013"
                      android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@mipmap/back"
                android:text="我的余额"
                android:onClick="goback"
                android:clickable="true"
                android:textColor="#FFFFFF"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.45"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20sp"
                android:clickable="true"
                android:textColor="#FFFFFF"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20sp"
                android:clickable="true"
                android:onClick="showRegister"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
        <!--头部End-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#fc6013"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent"
            android:text="当前余额"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:gravity="clip_horizontal|bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:text="0.00"
            android:textSize="62sp"
            android:textColor="#ffffff"
            android:layout_marginBottom="5dp"
            android:gravity="right|bottom"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:text="元"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"
            android:gravity="left|bottom"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="余额明细"
        android:textColor="#999999"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical|left"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#ffffff"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#cccccc"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:text="提现到银行卡"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:gravity="bottom|left"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:text="余额：0.00"
                    android:layout_marginTop="5dp"
                    android:textColor="#999999"
                    android:textSize="16sp"
                    android:gravity="top|left"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:text="-201.14"
                    android:textColor="#1da5ec"
                    android:textSize="20sp"
                    android:gravity="bottom|right"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:text="2017-01-03"
                    android:layout_marginTop="5dp"
                    android:textColor="#999999"
                    android:textSize="16sp"
                    android:gravity="top|right"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#cccccc"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:text="充值"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:gravity="bottom|left"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:text="余额：200"
                    android:layout_marginTop="5dp"
                    android:textColor="#999999"
                    android:textSize="16sp"
                    android:gravity="top|left"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:text="+200"
                    android:textColor="#ec1d23"
                    android:textSize="20sp"
                    android:gravity="bottom|right"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:text="2017-01-03"
                    android:layout_marginTop="5dp"
                    android:textColor="#999999"
                    android:textSize="16sp"
                    android:gravity="top|right"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#cccccc"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:text="金谷大酒店198套餐"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:gravity="bottom|left"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:text="余额：239"
                    android:layout_marginTop="5dp"
                    android:textColor="#999999"
                    android:textSize="16sp"
                    android:gravity="top|left"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:text="-198"
                    android:textColor="#1da5ec"
                    android:textSize="20sp"
                    android:gravity="bottom|right"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:text="2017-01-03"
                    android:layout_marginTop="5dp"
                    android:textColor="#999999"
                    android:textSize="16sp"
                    android:gravity="top|right"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#cccccc"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:text="充值"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:gravity="bottom|left"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:text="余额：630"
                    android:layout_marginTop="5dp"
                    android:textColor="#999999"
                    android:textSize="16sp"
                    android:gravity="top|left"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:text="+255"
                    android:textColor="#ec1d23"
                    android:textSize="20sp"
                    android:gravity="bottom|right"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:text="2017-01-03"
                    android:layout_marginTop="5dp"
                    android:textColor="#999999"
                    android:textSize="16sp"
                    android:gravity="top|right"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#cccccc"/>
    </LinearLayout>

</LinearLayout>
